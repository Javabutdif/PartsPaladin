@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@model IEnumerable<PartsPaladin.Models.OrderWithProducts>


<h1 class="text-center text-white">Order Details</h1>


<table class="table  text-white">
    <thead>
        <tr>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Product Quantity</th>
            <th>Price</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.product.product_image" class="img-fluid" style="height:5rem;width:5rem" />
                </td>
                <td> 
                    @item.product.product_name
                </td>
                <td>
                    @item.details.quantity
                </td>
                <td>
                    @item.details.price
                </td>

            </tr>
        }
        <tr>
            <td><strong><h3>Total: @ViewBag.TotalSubtotal </h3></strong></td>
        </tr>
        <tr>
        </tr>
    </tbody>
</table>