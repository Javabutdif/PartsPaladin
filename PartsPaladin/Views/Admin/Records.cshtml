@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@model IEnumerable<PartsPaladin.Models.Records>



<h1 class="text-center">Records</h1>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Order Status</th>
            <th>Total</th>
   
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.customer_name
                </td>
                <td>
                    @item.order_date
                </td>
                <td>
                    @item.order_status
                </td>
                <td>
                    @item.order_total
                </td>
              
            </tr>
        }

    </tbody>
</table>