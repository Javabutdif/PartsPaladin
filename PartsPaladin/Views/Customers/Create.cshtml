@model PartsPaladin.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container login-container ">
    <div class="login-form bg-white text-center">
        <h3 class="text-center">Add Customer</h3>
        <form asp-action="CreateCustomer" asp-controller="Customers">
            <div class="form-group my-3">

                <input name="name" type="text" class="form-control" id="name" placeholder="Enter name">
            </div>
            <div class="form-group my-3">

                <input name="email" type="email" class="form-control" id="email" placeholder="Enter email...">
            </div>
            <div class="form-group my-3">

                <input name="address" type="text" class="form-control" id="address" placeholder="Enter address">
            </div>
            <div class="form-group my-3">

                <input name="city" type="text" class="form-control" id="city" placeholder="Enter city">
            </div>
            <div class="form-group my-3">

                <input name="password" type="password" class="form-control" id="password" placeholder="Password...">
            </div>
            <div class="form-group my-3 mb-3">

                <input name="conpassword" type="password" class="form-control" id="conpassword" placeholder="Confirm Password...">
            </div>

            <button type="submit"  class="btn btn-block btn-primary mb-3">Create</button>
      
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
