@model PartsPaladin.Models.Customer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1 class="text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-white">Customer</h4>
    <hr />
    <dl class="row text-white">
        <dt class = "col-sm-2">
          Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customer_name)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customer_email)
        </dd>
   
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customer_address)
        </dd>
        <dt class = "col-sm-2">
           City
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customer_city)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="customer_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
