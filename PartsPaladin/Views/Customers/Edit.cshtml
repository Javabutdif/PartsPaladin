@model PartsPaladin.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1 class="text-white">Edit</h1>

<h4 class="text-white">Customer</h4>
<hr />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Customers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="id" type="hidden" asp-for="customer_id" />
            <div class="form-group">
                <label asp-for="customer_name" class="control-label">Customer Name</label>
                <input name="name" asp-for="customer_name" class="form-control" />
                <span asp-validation-for="customer_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="customer_email" class="control-label">Customer Email</label>
                <input name="email" asp-for="customer_email" class="form-control" />
                <span asp-validation-for="customer_email" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="customer_address" class="control-label">Customer Address</label>
                <input name="address" asp-for="customer_address" class="form-control" />
                <span asp-validation-for="customer_address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="customer_city" class="control-label">Customer City</label>
                <input name="city" asp-for="customer_city" class="form-control" />
                <span asp-validation-for="customer_city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
