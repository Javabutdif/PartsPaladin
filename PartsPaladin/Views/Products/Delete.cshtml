@model PartsPaladin.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1 class="text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-white">Product</h4>
    <hr />
    <dl class="row text-white">
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.product_name)
        </dd>
        <dt class = "col-sm-2">
            Product Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.product_description)
        </dd>
        <dt class = "col-sm-2">
            Product Price
        </dt>
        <dd class = "col-sm-10">
            ₱@Html.DisplayFor(model => model.product_price)
        </dd>
        <dt class = "col-sm-2">
            Product Stocks
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.product_stocks)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="product_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
