@model PartsPaladin.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1 class="text-white">Edit</h1>

<h4 class="text-white">Product</h4>
<hr />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Products">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product_id" />
            <div class="form-group">
                <label asp-for="product_name" class="control-label">Product Name</label>
                <input name="name" asp-for="product_name" class="form-control" />
                <span asp-validation-for="product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product_description" class="control-label">Product Description</label>
                <input name="description" asp-for="product_description" class="form-control" />
                <span asp-validation-for="product_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product_price" class="control-label">Product Price</label>
                <input name="price" asp-for="product_price" class="form-control" />
                <span asp-validation-for="product_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product_stocks" class="control-label">Product Stocks</label>
                <input name="stocks" asp-for="product_stocks" class="form-control" />
                <span asp-validation-for="product_stocks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
